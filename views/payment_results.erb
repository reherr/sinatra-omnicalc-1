 <h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years_input %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal_input.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @monthly_payment.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
